<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.davelogapps.cineconcertmanagerv2.controller.EditSequenceController"
      spacing="10" alignment="CENTER">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Éditer une séquence" style="-fx-font-size: 18px;"/>

    <ListView fx:id="sequenceListView" prefHeight="200" prefWidth="400" />

    <HBox spacing="10" alignment="CENTER">
        <Button text="Ouvrir" onAction="#openSequence"/>
        <Button text="Enregistrer" onAction="#saveSequence"/>
    </HBox>

    <ListView fx:id="videoListView" prefHeight="200" prefWidth="400"/>

</VBox>
